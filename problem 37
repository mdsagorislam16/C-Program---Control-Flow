#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a = 0, b = 1, next, sum = 0;

    for (int i = 0; i < n; i++) {
        if (i % 2 == 0) {
            sum = sum + a;
        }

        next = a + b;
        a = b;
        b = next;
    }

    printf("Sum = %d\n", sum);

    return 0;
}
